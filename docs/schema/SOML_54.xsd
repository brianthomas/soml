<xsd:schema targetNamespace="http://www.data-model.net/SemanticObject" 
        xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
        xmlns="http://www.data-model.net/SemanticObject" 
        elementFormDefault="qualified"
>

  <xsd:annotation>
    <xsd:documentation>
        SOML.xsd -- Semantic Object Modeling Language schema.
    </xsd:documentation>
  </xsd:annotation>

  <!-- abstract SO type -->
  <xsd:complexType name="AbstractSOType"/>

  <!-- one-way relationships between the source and target SO's -->
  <xsd:complexType name="relationshipType">
         <xsd:sequence>
             <xsd:element ref="SemanticObjectGroup" minOccurs="1" maxOccurs="1"/>
         </xsd:sequence>
         <xsd:attribute name="URI" type="xsd:anyURI"/>
  </xsd:complexType>

  <!-- Main Class : SemanticObject -->
   <xsd:complexType name="SemanticObjectType">
        <xsd:complexContent>
   	  <xsd:extension base="AbstractSOType">	
              <xsd:sequence>
                  <xsd:element name="relationship" type="relationshipType" 
                               minOccurs="0" maxOccurs="unbounded"
                   />
              </xsd:sequence>
              <xsd:attribute name="soid" type="xsd:ID" use="optional"/>
              <xsd:attribute name="URI" type="xsd:anyURI"/>
              <xsd:anyAttribute namespace="##any"/> <!-- allow other namespaces to add attribs to SO's -->
   	  </xsd:extension>
        </xsd:complexContent>
   </xsd:complexType>

   <!-- this type of quantity just references other types, allows some 
        compresson of the document -->
   <xsd:complexType name="refSOType">
      <xsd:complexContent>
        <xsd:extension base="AbstractSOType">
          <xsd:attribute name="soidRef" type="xsd:IDREF" use="required"/>
        </xsd:extension>
      </xsd:complexContent>
   </xsd:complexType>

  <!-- group declarations -->
  <xsd:element name="SemanticObjectGroup" type="AbstractSOType" abstract="true"/>

  <!-- elements -->
  <xsd:element name="semanticObject" type="SemanticObjectType" substitutionGroup="SemanticObjectGroup"/>
  <xsd:element name="refSO" type="refSOType" substitutionGroup="SemanticObjectGroup"/>

</xsd:schema>
