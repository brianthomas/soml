<?xml version="1.0"?><project>

  <modelVersion>4.0.0</modelVersion>

  <groupId>net.datamodel</groupId>
  <artifactId>som</artifactId>
  <name>Semantic Object Model</name>
  <version>0.1</version>
  <description>SOML (Semantic Object Model Language) Java package provides
handy representations of (instances of) semantic objects.</description>
  <build>
    <plugins>

      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <configuration>
          <outputDirectory>${basedir}/target/classes</outputDirectory>
          <resources>
            <resource>
              <directory>${basedir}/src/main/resources</directory>
            </resource>
          </resources>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <overview>${basedir}/docs/Overview.html</overview>
        </configuration>
      </plugin>

