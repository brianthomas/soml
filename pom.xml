      <version>1.5.1</version>
      <scope>test</scope>
    </dependency>
    
    <dependency>
      <groupId>jjtraveler</groupId>
      <artifactId>aterm-java</artifactId>
      <version>1.6</version>
      <scope>test</scope>
    </dependency>
    
    <dependency>
      <groupId>relaxngDatatype</groupId>
